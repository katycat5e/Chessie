<Window x:Class="Chessie.GUI.StringPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chessie"
        mc:Ignorable="d"
        Title="StringPrompt" Height="100" Width="300">
    <DockPanel LastChildFill="True">
        <UniformGrid DockPanel.Dock="Bottom" Rows="1" Columns="2">
            <Button x:Name="OKButton" Content="OK" Click="OKButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"/>
        </UniformGrid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="TextInput" TextWrapping="Wrap" Height="Auto"/>
        </ScrollViewer>
    </DockPanel>
</Window>
